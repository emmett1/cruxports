# Description:	Session manager for Xfce
# URL:		http://www.xfce.org/
# Maintainer:	Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:	libwnck-gtk3 libxfce4ui which desktop-file-utils shared-mime-info polkit-gnome xfdesktop xorg-libsm xorg-iceauth xorg-xinit xorg-xrdb

name=xfce4-session
version=4.14.0
release=1
source=(http://archive.xfce.org/src/xfce/xfce4-session/${version::4}/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--disable-legacy-sm \
		--disable-nls
	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/locale
}
