# Description:	A battery monitor panel plugin for Xfce4
# URL:		https://goodies.xfce.org/projects/panel-plugins/xfce4-battery-plugin
# Maintainer:	Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:	xfce4-panel intltool

name=xfce4-battery-plugin
version=1.1.3
release=1
source=(http://archive.xfce.org/src/panel-plugins/xfce4-battery-plugin/${version%.*}/xfce4-battery-plugin-$version.tar.bz2)

build() {
	cd $name-$version
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static \
		--disable-debug \
		--disable-nls
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share/locale
}
