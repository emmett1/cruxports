# Description:	A compositor for X11
# URL:		https://github.com/yshui/compton
# Maintainer:	Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:	libconfig dbus libev libxdg-basedir uthash

name=compton
version=7.4
release=1
source=(https://github.com/yshui/compton/archive/v$version/$name-$version.tar.gz
	compton.conf
	compton.custom.conf)

build() {
	cd picom-$version

	mkdir build

	meson --prefix=/usr --buildtype=release . build
	ninja -C build
	DESTDIR=$PKG ninja -C build install

	#install -Dm644 $SRC/compton.conf $PKG/etc/xdg/compton.conf
	install -Dm644 compton.sample.conf $PKG/etc/xdg/compton.sample.conf
	install -Dm644 $SRC/compton.custom.conf $PKG/etc/xdg/compton.conf
}
