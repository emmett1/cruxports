# Description:	Plugin to switch keyboard layouts for the Xfce4 panel
# URL:		http://goodies.xfce.org/projects/panel-plugins/xfce4-xkb-plugin
# Maintainer:	Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:	librsvg libxklavier xfce4-panel libwnck-gtk3

name=xfce4-xkb-plugin
version=0.8.1
release=1
source=(http://archive.xfce.org/src/panel-plugins/xfce4-xkb-plugin/${version::3}/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--disable-debug \
		--disable-nls
	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/locale
}
