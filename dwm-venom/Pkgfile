# Description:	A dynamic window manager for X
# URL:		http://dwm.suckless.org/
# Maintainer:	Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:	dmenu freetype xorg-libx11 xorg-libxft xorg-libxinerama ohsnap siji-font st-venom

name=dwm-venom
version=20190603
release=1
_commit=840dab393a0d6d8d46c29c24e57f2ebf5238d82e
source=(https://github.com/venomlinux/dwm-venom/archive/$_commit.tar.gz
	dwm.desktop
	dwm-bar
	config.h)

build() {
	cd $name-$_commit

	cp $SRC/config.h .

	make PREFIX=/usr DESTDIR=$PKG install

	install -m644 -D $SRC/dwm.desktop $PKG/usr/share/xsessions/dwm.desktop
	install -m755 -D $SRC/dwm-bar $PKG/usr/bin/dwm-bar
}
