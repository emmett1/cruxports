# Description:	Collection of programs that are useful for adjusting your Xfce preferences
# URL:		http://www.xfce.org/
# Maintainer:	Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:	exo garcon libxfce4ui libcanberra libnotify libxklavier gnome-icon-theme libinput

name=xfce4-settings
version=4.14.1
release=1
source=(http://archive.xfce.org/src/xfce/xfce4-settings/${version::4}/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-sound-settings \
		--enable-pluggable-dialogs \
		--disable-nls
	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/locale
}
